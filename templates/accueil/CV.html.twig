            margin: 40px auto;
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(0,0,0,0.1);
            }

            .header-name {
            font-size: 2.2rem;
            font-weight: bold;
            }

            .section-title {
            font-size: 1.4rem;
            border-left: 4px solid #0d6efd;
            padding-left: 10px;
            margin-top: 25px;
            font-weight: bold;
            }

            /* Styles pour PDF */
            @media print {
                #downloadBtn {
                    display: none;
            }
            body {
                background: white !important;
            }
            .cv-container {
                box-shadow: none;
                margin: 0;
            }
        }
